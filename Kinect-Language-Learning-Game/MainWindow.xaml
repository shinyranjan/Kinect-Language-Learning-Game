<Window x:Class="ColorBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorBasics"
        mc:Ignorable="d"
        Title="KINECT Drawing" Height="350" Width="525"
        WindowState="Maximized"
        Background="Black"
        Closing="MainWindow_Closing">
    <Viewbox>
        <Grid Width="1920" Height="1080">
            <Image Source="{Binding ImageSource}" />
            <Canvas Name="canvas">
                <local:DrawingBrush x:Name="brush" Width="300" Height="300" />
                <Polyline Name="trail" Stroke="Black" StrokeThickness="25">
                    <Polyline.Effect>
                        <BlurEffect Radius="5" />
                    </Polyline.Effect>
                </Polyline>
            </Canvas>
        </Grid>
    </Viewbox>
</Window>
